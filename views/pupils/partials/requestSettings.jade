div.settings-list-item-holder
    a.settings-list-item.editable(href="request")
        div.settings-list-item-container
            div.settings-list-content
                div.setting-name
                    div.step-sign(class=(user.requestImg ? (user.requestImgNotApproved ? 'not-approved' : 'ready'): ''))
                        if (user.requestImg)
                            i.material-icons.done-icon #{user.requestImgNotApproved ? 'clear' : 'done'}
                        else
                            | 5
                    b Справка
                div.setting-value
                    if (user.requestImg)
                        if (user.requestImg.substr(user.requestImg.lastIndexOf('.') + 1) === 'pdf')
                            a(href="/images/pupils/#{user.requestImg}", title="pdf. файл", target="_blank") файл справки
                        else
                            img.img-preview(src="/images/pupils/#{user.requestImg}", width="200")
                    else
                        | нужно отправить нам справку из школы
            div.settings-list-next-sign
                i.material-icons keyboard_arrow_right