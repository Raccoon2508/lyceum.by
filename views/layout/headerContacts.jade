- var beforeUrl = "";
if locals.lang 
    - beforeUrl = "/" + locals.lang;
doctype 5
html(lang= locals.lang || "ru")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
    
        include metatags

        link(rel="shortcut icon", href="/favicon.ico", type="image/x-icon")
        link(rel="icon", href="/favicon.ico", type="image/x-icon")    
        
        link(href='http://fonts.googleapis.com/css?family=PT+Sans:400,700|PT+Sans+Caption&subset=latin,cyrillic', rel='stylesheet', type='text/css')
        link(rel='stylesheet', href='/css/style.css')
        
        include social/script
        
        script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDNGvNpKppkGJzZjeAGYl_rUHr70jDKpqo&sensor=true")
        script
            function initialize() {
                var Latlng = new google.maps.LatLng(53.896601,27.565727);
                var mapOptions = {
                    center: Latlng,
                    zoom: 15
                };
                var map = new google.maps.Map(document.getElementById("map-canvas"), mapOptions);
                var image = '/img/map.png';
                var marker = new google.maps.Marker({
                    position: Latlng,
                    map: map,
                    title: 'Лицей БГУ',
                    icon: image
                });
            }
            google.maps.event.addDomListener(window, 'load', initialize);
    body
        //div#flash
        div#container
            include sidebar
            block content
