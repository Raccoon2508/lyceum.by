doctype html
html(lang='en')
head
	meta(charset='utf-8')
	meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
	title Админка Lyceum.by
	meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no', name='viewport')

	link(href='https://fonts.googleapis.com/css?family=Montserrat:400,700,200', rel='stylesheet')
	link(href='https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css', rel='stylesheet')
	link(href='/assets/css/bootstrap.min.css', rel='stylesheet')
	link(href='/assets/css/paper-dashboard.min.css?v=2.1.1', rel='stylesheet')
	link(href='/assets/demo/demo.css', rel='stylesheet')
body.login-page
	nav.navbar.navbar-expand-lg.navbar-absolute.fixed-top.navbar-transparent
		.container
			.navbar-wrapper
				.navbar-toggle
					button.navbar-toggler(type='button')
					span.navbar-toggler-bar.bar1
					span.navbar-toggler-bar.bar2
					span.navbar-toggler-bar.bar3
				a.navbar-brand(href='javascript:;') Лицей БГУ

	// End Navbar
	.wrapper.wrapper-full-page
		.full-page.section-image(filter-color='black', data-image='/assets/img/lyceumbg.jpg')
			.content
				.container
					.col-lg-4.col-md-6.ml-auto.mr-auto
						form.form(method='post', action='/admin')
							.card.card-login
								.card-header
									.card-header
										h3.header.text-center Вход
								.card-body
									.input-group
										.input-group-prepend
											span.input-group-text
												i.nc-icon.nc-single-02
										input.form-control(type='text', name='username', placeholder='Username')
									.input-group
										.input-group-prepend
											span.input-group-text
												i.nc-icon.nc-key-25
										input.form-control(type='password',name='password', placeholder='Password')
								.card-footer
									button.btn.btn-primary.btn-round.btn-block.mb-3(type='submit') Войти
			footer.footer.footer-black.footer-white
				.container-fluid
					.row
						nav.footer-nav

						.credits.ml-auto

	// Core JS Files
	script(src='/assets/js/core/jquery.min.js')
	script(src='/assets/js/core/popper.min.js')
	script(src='/assets/js/core/bootstrap.min.js')
	script(src='/assets/js/plugins/perfect-scrollbar.jquery.min.js')
	script(src="/assets/js/core/moment.min.js")
	script(src="/assets/js/core/moment.locale.ru.js",  charset="UTF-8" )
	script.
		$(document).ready(function() {
			$page = $('.full-page');
			image_src = $page.data('image');

			if (image_src !== undefined) {
			image_container = '<div class="full-page-background" style="background-image: url(' + image_src + ') "/>';
			$page.append(image_container);
			}
		});